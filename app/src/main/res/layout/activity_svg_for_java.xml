<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yangkunjian.svgdemo.activity.SvgForJavaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Svg For Java 最简实现"
                android:textStyle="bold" />

            <com.yangkunjian.svgdemo.custom.SvgView
                android:id="@+id/svgView1"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Svg For Java 完美实现"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.yangkunjian.svgdemo.custom.AnimatedSvgView
                    android:id="@+id/svg_view_0"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    app:animatedSvgFillColors="@array/google_glyph_colors"
                    app:animatedSvgFillStart="1500"
                    app:animatedSvgFillTime="1500"
                    app:animatedSvgGlyphStrings="@array/google_glyph_strings"
                    app:animatedSvgImageSizeX="400"
                    app:animatedSvgImageSizeY="400"
                    app:animatedSvgTraceTime="3000"
                    app:animatedSvgTraceTimePerGlyph="1500" />

                <com.yangkunjian.svgdemo.custom.AnimatedSvgView
                    android:id="@+id/svg_view_1"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    app:animatedSvgFillColors="@array/google_glyph_colors"
                    app:animatedSvgFillStart="1500"
                    app:animatedSvgFillTime="1500"
                    app:animatedSvgGlyphStrings="@array/google_glyph_strings"
                    app:animatedSvgImageSizeX="400"
                    app:animatedSvgImageSizeY="400"
                    app:animatedSvgTraceTime="3000"
                    app:animatedSvgTraceTimePerGlyph="1500" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp">

                <com.yangkunjian.svgdemo.custom.AnimatedSvgView
                    android:id="@+id/svg_view_2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    app:animatedSvgFillColors="@array/google_glyph_colors"
                    app:animatedSvgFillStart="1500"
                    app:animatedSvgFillTime="1500"
                    app:animatedSvgGlyphStrings="@array/google_glyph_strings"
                    app:animatedSvgImageSizeX="400"
                    app:animatedSvgImageSizeY="400"
                    app:animatedSvgTraceTime="3000"
                    app:animatedSvgTraceTimePerGlyph="1500" />

                <com.yangkunjian.svgdemo.custom.AnimatedSvgView
                    android:id="@+id/svg_view_3"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    app:animatedSvgFillColors="@array/google_glyph_colors"
                    app:animatedSvgFillStart="1500"
                    app:animatedSvgFillTime="1500"
                    app:animatedSvgGlyphStrings="@array/google_glyph_strings"
                    app:animatedSvgImageSizeX="400"
                    app:animatedSvgImageSizeY="400"
                    app:animatedSvgTraceTime="3000"
                    app:animatedSvgTraceTimePerGlyph="1500" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
